{
  "compilerOptions": {
    "jsx": "react-jsx",        // Or "react" for older React versions
    "lib": ["dom", "esnext"],  // Ensure DOM is included
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  }
}
